<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout13"
            android:padding="@dimen/_18sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:elevation="@dimen/_1sdp"
            android:background="@drawable/bottom_round_bg"
            android:backgroundTint="@color/blue_secondry"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/icn_back_arrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="48dp"
                android:fontFamily="@font/m_semibold"
                android:text="@string/welcome"
                android:textColor="#406484"
                android:textSize="@dimen/_26sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:fontFamily="@font/m_medium"
                android:text="@string/sign_in_to_continue"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/welcome"
                app:layout_constraintTop_toBottomOf="@+id/welcome" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout12"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="@dimen/_18sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout13"
            app:layout_constraintVertical_bias="0.0">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputEditText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <EditText

                    android:id="@+id/emailEdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/m_medium"
                    android:hint="Enter your E-mail "
                    android:paddingEnd="@dimen/_20sdp"
                    android:textColorHint="@color/grey1">


                </EditText>
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/emailValidation"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_margin="@dimen/_8sdp"
                android:src="@drawable/icn_email_validation"
                app:layout_constraintBottom_toBottomOf="@+id/textInputEditText1"
                app:layout_constraintEnd_toEndOf="@+id/textInputEditText1"
                app:layout_constraintTop_toTopOf="@+id/textInputEditText1"
                app:tint="@color/_A8A8A8" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputEditText2"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textInputEditText1">

                <EditText
                    android:id="@+id/passwordEdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/m_medium"
                    android:hint="Enter your Password"
                    android:textColorHint="@color/grey1" />

            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/passwordShow"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_margin="@dimen/_8sdp"
                android:src="@drawable/icn_hide_password"
                app:layout_constraintBottom_toBottomOf="@+id/textInputEditText2"
                app:layout_constraintEnd_toEndOf="@+id/textInputEditText2"
                app:layout_constraintTop_toTopOf="@+id/textInputEditText2"
                app:tint="@color/_A8A8A8" />


            <TextView
                android:id="@+id/frogetpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4sdp"
                android:fontFamily="@font/m_medium"
                android:text="@string/forgot_password"
                android:textColor="@color/blue_primary"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintStart_toStartOf="@+id/textInputEditText2"
                app:layout_constraintTop_toBottomOf="@+id/textInputEditText2" />


            <Button
                android:id="@+id/btnAdmin"
                android:layout_width="0dp"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@drawable/emp_btn_unselect"
                android:elevation="@dimen/_1sdp"
                android:fontFamily="@font/m_medium"
                android:text="Admin"
                android:textAllCaps="false"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/btnEmp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputEditText2" />

            <Button
                android:id="@+id/btnEmp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:background="@drawable/emp_btn_unselect"
                android:elevation="@dimen/_1sdp"
                android:fontFamily="@font/m_medium"
                android:text="Employee"
                android:textAllCaps="false"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnAdmin"
                app:layout_constraintTop_toBottomOf="@+id/textInputEditText2" />

            <Button
                android:id="@+id/LoginBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginHorizontal="@dimen/_6sdp"
                android:layout_marginTop="140dp"
                android:background="@drawable/button_bg_gradient"
                android:elevation="@dimen/_7sdp"
                android:fontFamily="@font/m_bold"
                android:text="@string/login"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.492"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputEditText2" />


