<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".employee.fragment.MyAttendance">

    <com.yarolegovich.discretescrollview.DiscreteScrollView
        android:id="@+id/monthpicker"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginHorizontal="@dimen/_51sdp"
        android:animation="@anim/recycler_animation"
        android:foregroundGravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:spanCount="2"
        tools:itemCount="3"
        tools:listitem="@layout/design_custom_monthpicker" />

    <ImageView
        android:id="@+id/left_arrow"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_6sdp"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/left_arow"
        app:layout_constraintBottom_toBottomOf="@+id/monthpicker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/monthpicker" />


    <ImageView
        android:id="@+id/right_arrow"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:padding="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        android:src="@drawable/right_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/monthpicker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/monthpicker" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/historyRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/monthpicker"
        app:layout_constraintVertical_bias="0.0"
        tools:listitem="@layout/design_attendance_history" />

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>