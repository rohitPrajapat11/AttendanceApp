<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="270"
    android:toDegrees="270">
    <shape
        android:innerRadiusRatio="2.9"
        android:shape="ring"
        android:thickness="@dimen/_3sdp"
        android:useLevel="true">

        <gradient
            android:angle="45"
            android:endColor="#673AD1"
            android:centerColor="#7ABFDF"
            android:startColor="@color/blue_secondry"
            android:type="sweep"
            android:useLevel="true" />
    </shape>
</rotate>