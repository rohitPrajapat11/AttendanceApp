<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_125sdp"
    android:elevation="@dimen/_2sdp"
    android:layout_margin="@dimen/_3sdp"
    android:padding="@dimen/_2sdp"
    android:background="@drawable/white_5r_bg"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/_4sdp"
        android:layout_height="@dimen/_4sdp"
        android:layout_margin="@dimen/_2sdp"
        android:src="@drawable/circle_orange_bg"
        app:layout_constraintBottom_toBottomOf="@+id/taskTitle"
        app:layout_constraintEnd_toStartOf="@+id/taskTitle"
        app:layout_constraintTop_toTopOf="@+id/taskTitle" />

    <ImageView
        android:layout_marginEnd="@dimen/_1sdp"
        android:id="@+id/imageView4"
        android:layout_width="@dimen/_4sdp"
        android:layout_height="@dimen/_16sdp"
        app:tint="@color/black"
        android:src="@drawable/icn_forward_white_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/taskTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginStart="@dimen/_9sdp"
        android:fontFamily="@font/m_light"
        android:padding="@dimen/_2sdp"
        android:text="Project metting at 10:00  "
        android:textColor="@color/black"
        android:textSize="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/Discription"
        android:layout_width="0dp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginEnd="@dimen/_1sdp"
        android:gravity="left"
        android:padding="@dimen/_1sdp"
        android:text=" join meeting on zoom we will be discussing the on going project progress an testing.. "
        android:textColor="@color/grey"
        android:textSize="@dimen/_4sdp"
        android:fontFamily="@font/m_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="@+id/taskTitle"
        app:layout_constraintTop_toBottomOf="@+id/taskTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>