<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:background="@drawable/bottom_10r_white_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:elevation="@dimen/_5sdp"
                android:padding="@dimen/_6sdp"
                android:src="@drawable/icn_back_arrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/editBtn"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:elevation="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_baseline_edit_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/backBtn"
                app:tint="@color/white" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/textLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topLayout">

            <ScrollView
                android:id="@+id/scrollableLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_65sdp"
                android:fillViewport="true"
                android:scrollbars="none"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/inputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:paddingBottom="@dimen/_10sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView"
                    tools:layout_editor_absoluteX="0dp">

                    <TextView
                        android:id="@+id/nameLb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:fontFamily="@font/arial_rounded_mt_bold"
                        android:text="@string/name"
                        android:textColor="@color/_A8A8A8"
                        android:textSize="@dimen/_14sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/nameTxt"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_25sdp"
                        android:background="@drawable/edit_text_bg"
                        android:drawableStart="@drawable/icn_user"
                        android:drawablePadding="@dimen/_10sdp"
                        android:drawableTint="@color/prime"
                        android:enabled="false"
                        android:fontFamily="@font/font_heavy"
                        android:hint="@string/enter_your_name"
                        android:importantForAutofill="no"
                        android:inputType="textNoSuggestions"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:textAllCaps="true"
                        android:textColor="@color/prime"
                        android:textSize="@dimen/_11ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/nameLb"
                        app:layout_constraintTop_toBottomOf="@+id/nameLb"
                        tools:ignore="TextFields"
                        tools:targetApi="m" />

                    <TextView
                        android:id="@+id/emailLb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/arial_rounded_mt_bold"
                        android:text="@string/email"
                        android:textColor="@color/_A8A8A8"
                        android:textSize="@dimen/_14sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/nameTxt" />

                    <EditText
                        android:id="@+id/emailTxt"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_25sdp"
                        android:background="@drawable/edit_text_bg"
                        android:drawableStart="@drawable/icn_email"
                        android:drawablePadding="@dimen/_10sdp"
                        android:drawableTint="@color/prime"
                        android:enabled="false"
                        android:focusable="false"
                        android:fontFamily="@font/font_heavy"
                        android:hint="@string/enter_your_email"
                        android:importantForAutofill="no"
                        android:inputType="textNoSuggestions"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:textAllCaps="true"
                        android:textColor="@color/prime"
                        android:textSize="@dimen/_11ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/emailLb"
                        app:layout_constraintTop_toBottomOf="@+id/emailLb"
                        tools:ignore="TextFields"
                        tools:targetApi="m" />

                    <TextView
                        android:id="@+id/phoneLb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/arial_rounded_mt_bold"
                        android:text="@string/mobile"
                        android:textColor="@color/_A8A8A8"
                        android:textSize="@dimen/_14sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/emailTxt" />

                    <EditText
                        android:id="@+id/phoneTxt"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_25sdp"
                        android:background="@drawable/edit_text_bg"
                        android:drawableStart="@drawable/icn_phone"
                        android:drawablePadding="@dimen/_10sdp"
                        android:drawableTint="@color/prime"
                        android:enabled="false"
                        android:fontFamily="@font/font_heavy"
                        android:hint="@string/enter_your_mobile_number"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxLength="10"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:textAllCaps="true"
                        android:textColor="@color/prime"
                        android:textSize="@dimen/_11ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/phoneLb"
                        app:layout_constraintTop_toBottomOf="@+id/phoneLb"
                        tools:ignore="TextFields"
                        tools:targetApi="m" />

                    <TextView
                        android:id="@+id/designationLb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:fontFamily="@font/arial_rounded_mt_bold"
                        android:text="Designation"
                        android:textColor="@color/_A8A8A8"
                        android:textSize="@dimen/_14sdp"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/phoneTxt" />

                    <TextView
                        android:id="@+id/designationTxt"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="@dimen/_25sdp"
                        android:background="@drawable/edit_text_bg"
                        android:drawableStart="@drawable/ic_baseline_design_services_24"
                        android:drawablePadding="@dimen/_10sdp"
                        android:drawableTint="@color/_A8A8A8"
                        android:enabled="false"
                        android:focusable="false"
                        android:fontFamily="@font/font_heavy"
                        android:gravity="center_vertical"
                        android:hint="Select Designation"
                        android:importantForAutofill="no"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:text="Admin"
                        android:textAllCaps="true"
                        android:textColor="@color/prime"
                        android:textSize="@dimen/_11ssp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/designationLb"
                        app:layout_constraintTop_toBottomOf="@+id/designationLb"
                        tools:ignore="TextFields"
                        tools:targetApi="m" />

                    <TextView
                        android:id="@+id/otherNumbLb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/arial_rounded_mt_bold"
                        android:text="Alternative Number"
                        android:textColor="@color/_A8A8A8"
                        android:textSize="@dimen/_14sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/phoneTxt" />

                    <EditText
                        android:id="@+id/otherNumTxt"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:background="@drawable/edit_text_bg"
                        android:drawablePadding="@dimen/_10sdp"
                        android:drawableTint="@color/prime"
                        android:enabled="false"
                        android:fontFamily="@font/font_heavy"
                        android:gravity="center_vertical"
                        android:hint="Enter Alternative Number"
                        android:importantForAutofill="no"
                        android:inputType="textNoSuggestions"
                        android:maxLength="10"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:textAllCaps="true"
                        android:textColor="@color/prime"
                        android:textSize="@dimen/_11ssp"
                        app:drawableStartCompat="@drawable/icn_phone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/otherNumbLb"
                        app:layout_constraintTop_toBottomOf="@+id/otherNumbLb" />


                    <TextView
                        android:id="@+id/dobLb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/arial_rounded_mt_bold"
                        android:text="@string/date_of_birth"
                        android:textColor="@color/_A8A8A8"
                        android:textSize="@dimen/_14sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/otherNumTxt" />

                    <TextView
                        android:id="@+id/dobTxt"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_25sdp"
                        android:background="@drawable/edit_text_bg"
                        android:drawablePadding="@dimen/_10sdp"
                        android:drawableTint="@color/prime"
                        android:enabled="false"
                        android:fontFamily="@font/font_heavy"
                        android:gravity="center_vertical"
                        android:hint="@string/select_dob"
                        android:importantForAutofill="no"
                        android:inputType="textNoSuggestions"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:textAllCaps="true"
                        android:textColor="@color/prime"
                        android:textSize="@dimen/_11ssp"
                        app:drawableStartCompat="@drawable/icn_dob"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/phoneLb"
                        app:layout_constraintTop_toBottomOf="@+id/dobLb"
                        tools:ignore="TextFields,TextViewEdits" />

                    <TextView
                        android:id="@+id/gstinLb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/arial_rounded_mt_bold"
                        android:text="GSTIN"
                        android:textColor="@color/_A8A8A8"
                        android:textSize="@dimen/_14sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/dobTxt" />

                    <EditText
                        android:id="@+id/gstinTxt"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:background="@drawable/edit_text_bg"
                        android:drawablePadding="@dimen/_10sdp"
                        android:drawableTint="@color/prime"
                        android:enabled="false"
                        android:fontFamily="@font/font_heavy"
                        android:gravity="center_vertical"
                        android:hint="Enter GSTIN"
                        android:importantForAutofill="no"
                        android:inputType="textNoSuggestions"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:textAllCaps="true"
                        android:textColor="@color/prime"
                        android:textSize="@dimen/_11ssp"
                        app:drawableStartCompat="@drawable/icn_gstin"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/dobTxt"
                        app:layout_constraintTop_toBottomOf="@+id/gstinLb" />

                    <TextView
                        android:id="@+id/gstidLb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/arial_rounded_mt_bold"
                        android:text="GSTID"
                        android:textColor="@color/_A8A8A8"
                        android:textSize="@dimen/_14sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/gstinTxt" />

                    <EditText
                        android:id="@+id/gstidTxt"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:background="@drawable/edit_text_bg"
                        android:drawablePadding="@dimen/_10sdp"
                        android:drawableTint="@color/prime"
                        android:enabled="false"
                        android:fontFamily="@font/font_heavy"
                        android:gravity="center_vertical"
                        android:hint="Enter GSTID"
                        android:importantForAutofill="no"
                        android:inputType="textNoSuggestions"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:textAllCaps="true"
                        android:textColor="@color/prime"
                        android:textSize="@dimen/_11ssp"
                        app:drawableStartCompat="@drawable/icn_gstid"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/gstidLb"
                        app:layout_constraintTop_toBottomOf="@+id/gstidLb" />

                    <TextView
                        android:id="@+id/incDateLb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/arial_rounded_mt_bold"
                        android:text="Incorporation Date"
                        android:textColor="@color/_A8A8A8"
                        android:textSize="@dimen/_14sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/gstidTxt" />

                    <TextView
                        android:id="@+id/incDateTxt"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:background="@drawable/edit_text_bg"
                        android:drawablePadding="@dimen/_10sdp"
                        android:drawableTint="@color/prime"
                        android:enabled="false"
                        android:fontFamily="@font/font_heavy"
                        android:gravity="center_vertical"
                        android:hint="Enter Incorporation Date"
                        android:importantForAutofill="no"
                        android:inputType="textNoSuggestions"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:textAllCaps="true"
                        android:textColor="@color/prime"
                        android:textSize="@dimen/_11ssp"
                        app:drawableStartCompat="@drawable/icn_dob"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/incDateLb"
                        app:layout_constraintTop_toBottomOf="@+id/incDateLb" />

                    <TextView
                        android:id="@+id/addressLb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/arial_rounded_mt_bold"
                        android:text="@string/address"
                        android:textColor="@color/_A8A8A8"
                        android:textSize="@dimen/_14sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/incDateTxt" />

                    <EditText
                        android:id="@+id/addressTxt"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_25sdp"
                        android:background="@drawable/edit_text_bg"
                        android:drawableStart="@drawable/icn_location"
                        android:drawablePadding="@dimen/_10sdp"
                        android:drawableTint="@color/prime"
                        android:enabled="false"
                        android:fontFamily="@font/font_heavy"
                        android:hint="@string/enter_your_address"
                        android:importantForAutofill="no"
                        android:inputType="textMultiLine"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:textColor="@color/prime"
                        android:textSize="@dimen/_11ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/addressLb"
                        app:layout_constraintTop_toBottomOf="@+id/addressLb" />

                    <TextView
                        android:id="@+id/saveBtn"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@drawable/green_10r_bg"
                        android:elevation="2dp"
                        android:fontFamily="@font/font_heavy"
                        android:gravity="center"
                        android:text="@string/save"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/cancelBtn"
                        app:layout_constraintStart_toStartOf="@+id/addressTxt"
                        app:layout_constraintTop_toBottomOf="@+id/addressTxt" />

                    <TextView
                        android:id="@+id/cancelBtn"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@drawable/red_10r_bg"
                        android:elevation="2dp"
                        android:fontFamily="@font/font_heavy"
                        android:gravity="center"
                        android:text="@string/cancel"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@+id/saveBtn"
                        app:layout_constraintEnd_toEndOf="@+id/addressTxt"
                        app:layout_constraintStart_toEndOf="@+id/saveBtn"
                        app:layout_constraintTop_toTopOf="@+id/saveBtn" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:background="@drawable/green_round_bg"
            android:elevation="@dimen/_5sdp"
            android:src="@drawable/user"
            app:layout_constraintBottom_toBottomOf="@+id/topLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topLayout"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/cameraBtn"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/round_white_bg"
            android:elevation="@dimen/_10sdp"
            android:padding="@dimen/_6sdp"
            android:src="@drawable/icn_camera"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/profile"
            app:layout_constraintEnd_toEndOf="@+id/profile"
            app:layout_constraintStart_toStartOf="@+id/profile"
            app:layout_constraintTop_toBottomOf="@+id/profile" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>