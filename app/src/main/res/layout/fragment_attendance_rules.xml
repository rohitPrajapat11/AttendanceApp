                    app:cornerRadiusBL="12dp"
                    app:cornerRadiusBR="12dp"
                    app:cornerRadiusTL="@dimen/_12sdp"
                    app:cornerRadiusTR="@dimen/_12sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/shadow_wrapper2"
                    app:shadowColor="@color/blue"
                    app:shadowMarginBottom="2dp"
                    app:shadowMarginLeft="2dp"
                    app:shadowMarginRight="2dp"
                    app:shadowMarginTop="2dp"
                    app:shadowRadius="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="7dp"
                        android:text="Apply for 1 day leave before 1 day, for 2 or more day, apply 2 week before with perfect reason."
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />
                </com.loopeer.shadow.ShadowView>

