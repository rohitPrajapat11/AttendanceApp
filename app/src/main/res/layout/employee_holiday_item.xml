<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:padding="@dimen/_10sdp">

        <TextView
            android:id="@+id/theDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/arial_rounded_mt_bold"
            android:gravity="center"
            android:text="01-01-2022"
            android:textColor="@color/_C1C7D0"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintStart_toStartOf="@+id/theReason"
            app:layout_constraintTop_toBottomOf="@+id/theReason" />

        <TextView
            android:id="@+id/theReason"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_heavy"
            android:text="Holi"
            android:textColor="@color/_172B4D"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/moreBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_4sdp"
            android:src="@drawable/icn_more_btn"
            app:layout_constraintBottom_toBottomOf="@+id/theReason"
            app:layout_constraintEnd_toEndOf="@+id/theReason"
            app:layout_constraintTop_toTopOf="@+id/theReason" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>