                <top.limuyang2.shadowlayoutlib.ShadowLinearLayout
                    android:id="@+id/shadow_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/edittxt_grey_bg"
                    android:padding="@dimen/_7sdp"
                    app:l_radius="@dimen/_12sdp"
                    app:l_shadowAlpha="2"
                    app:l_shadowElevation="3dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shadowColor="@color/blue">

                    <TextView
                        android:id="@+id/stRule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial_rounded_mt_regular"
                        android:gravity="center"
                        android:text="Apply for 1 day leave before 1 day, for 2 or more day, apply 2 week before with perfect reason."
                        android:textColor="@color/primary_color"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </top.limuyang2.shadowlayoutlib.ShadowLinearLayout>

                <top.limuyang2.shadowlayoutlib.ShadowLinearLayout
                    android:id="@+id/shadow_wrapper2"
