<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/white_5r_bg"
        android:elevation="@dimen/_3sdp"
        android:padding="@dimen/_5sdp">

        <TextView
            android:id="@+id/numberTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_heavy"
            android:gravity="bottom"
            android:text="@string/_1"
            android:textColor="@color/_192d4d"
            android:textSize="@dimen/_11sdp"
            android:layout_marginStart="@dimen/_5sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/taskTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/font_heavy"
            android:gravity="start"
            android:text="@string/sample_task"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:paddingStart="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:textAllCaps="false"
            android:textColor="@color/light_black"
            android:textCursorDrawable="@drawable/text_cursor"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/numberTxt"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlSymmetry,TextViewEdits"
            app:drawableTint="@color/_A8A8A8" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>