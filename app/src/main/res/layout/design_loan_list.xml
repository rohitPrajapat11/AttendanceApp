<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="@dimen/_5sdp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:background="@drawable/white_10r_white_bg"
    android:elevation="@dimen/_5sdp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:fontFamily="@font/m_semibold"
        android:gravity="center"
        android:padding="@dimen/_2sdp"
        android:text="salary advance "
        android:textColor="@color/black"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_1sdp"
        android:background="@drawable/white_10r_white_bg"
        android:gravity="center"
        android:text="Pending"
        android:textSize="@dimen/_6sdp"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintStart_toEndOf="@+id/title"
        app:layout_constraintTop_toTopOf="@+id/title" />

    <TextView
        android:gravity="center"
        android:id="@+id/ammounttitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_26sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:fontFamily="@font/m_bold"
        android:inputType="textMultiLine"
        android:textColor="@color/grey"
        android:paddingHorizontal="@dimen/_5sdp"
        android:text="Advance "
        android:textAlignment="center"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:gravity="center"
        android:id="@+id/timeprogramtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/m_bold"
        android:inputType="textMultiLine"
        android:paddingHorizontal="@dimen/_5sdp"
        android:text="Duration "
        android:textAlignment="center"
        android:textColor="@color/grey"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintBottom_toBottomOf="@+id/ammounttitle"
        app:layout_constraintEnd_toStartOf="@+id/instalmenttitle"
        app:layout_constraintStart_toEndOf="@+id/ammounttitle"
        app:layout_constraintTop_toTopOf="@+id/ammounttitle" />

    <TextView
        android:gravity="center"
        android:id="@+id/instalmenttitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_26sdp"
        android:fontFamily="@font/m_bold"
        android:inputType="textMultiLine"
        android:paddingHorizontal="@dimen/_5sdp"
        android:text="Instalment "
        android:textAlignment="center"
        android:textColor="@color/grey"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintBottom_toBottomOf="@+id/timeprogramtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/timeprogramtitle" />

    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60,000"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintEnd_toEndOf="@+id/ammounttitle"
        app:layout_constraintStart_toStartOf="@+id/ammounttitle"
        app:layout_constraintTop_toBottomOf="@+id/ammounttitle" />

    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20 months"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintEnd_toEndOf="@+id/timeprogramtitle"
        app:layout_constraintStart_toStartOf="@+id/timeprogramtitle"
        app:layout_constraintTop_toBottomOf="@+id/timeprogramtitle" />

    <TextView
        android:id="@+id/instalments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3000"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="@+id/instalmenttitle"
        app:layout_constraintStart_toStartOf="@+id/instalmenttitle"
        app:layout_constraintTop_toBottomOf="@+id/instalmenttitle" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/icn_more_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>