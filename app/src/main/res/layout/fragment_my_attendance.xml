<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".employee.fragment.MyAttendance">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_marginTop="@dimen/_2sdp"
            app:cardCornerRadius="@dimen/_18sdp"
            android:elevation="@dimen/_8sdp"
            android:layout_marginHorizontal="@dimen/_55sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <View
                android:id="@+id/v1"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_3sdp"
                android:background="@drawable/bg_btn_gradient_in"
                android:elevation="@dimen/_5sdp"
                app:layout_constraintBottom_toBottomOf="@+id/monthpicker"
                app:layout_constraintEnd_toEndOf="@+id/monthpicker"
                app:layout_constraintStart_toStartOf="@+id/monthpicker" />


            <com.yarolegovich.discretescrollview.DiscreteScrollView
                android:id="@+id/monthpicker"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_32sdp"
                android:animation="@anim/recycler_animation"
                android:background="@color/white"
                android:foregroundGravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:spanCount="1"
                tools:listitem="@layout/design_custom_monthpicker" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_9sdp"
            android:elevation="@dimen/_4sdp"
            android:padding="@dimen/_1sdp"
            app:cardCornerRadius="@dimen/_30sdp"
            app:layout_constraintBottom_toBottomOf="@+id/card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/card">

            <ImageView
                android:id="@+id/leftBtn"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/ripple_loan"
                android:padding="@dimen/_7sdp"
                android:src="@drawable/left_arow" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginEnd="@dimen/_9sdp"
            android:padding="@dimen/_1sdp"
            android:elevation="@dimen/_4sdp"
            app:cardCornerRadius="@dimen/_30sdp"
            app:layout_constraintBottom_toBottomOf="@+id/card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/card">

            <ImageView
                android:id="@+id/rightBtn"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/ripple_loan"
                android:padding="@dimen/_7sdp"
                android:src="@drawable/right_arrow" />
        </androidx.cardview.widget.CardView>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/historyRecycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_2sdp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card"
            tools:listitem="@layout/design_attendance_history" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>