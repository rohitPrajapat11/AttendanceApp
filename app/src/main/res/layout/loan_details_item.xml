<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/white_5r_bg"
        android:elevation="@dimen/_3sdp"
        android:padding="@dimen/_10sdp">

        <TextView
            android:id="@+id/empNameLb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_heavy"
            android:paddingStart="@dimen/_10sdp"
            android:text="Name"
            android:textColor="@color/light_black"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintEnd_toStartOf="@+id/empNameTxt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/empNameTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_heavy"
            android:gravity="center_vertical"

            android:paddingStart="@dimen/_20sdp"
            android:text="Android Developer"
            android:textColor="@color/_172B4D"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintEnd_toStartOf="@+id/amountTxt"
            app:layout_constraintStart_toEndOf="@+id/takenDateLB"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/takenDateLB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/font_heavy"
            android:paddingStart="@dimen/_10sdp"
            android:text="Loan Date"
            android:textColor="@color/light_black"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/empNameLb" />

        <TextView
            android:id="@+id/takingDateTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_heavy"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/_20sdp"
            android:text="01/12/2021"
            android:textColor="@color/_172B4D"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintBottom_toBottomOf="@+id/takenDateLB"
            app:layout_constraintEnd_toStartOf="@+id/amountTxt"
            app:layout_constraintStart_toEndOf="@+id/takenDateLB"
            app:layout_constraintTop_toTopOf="@+id/takenDateLB" />

        <TextView
            android:id="@+id/amountTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_heavy"
            android:gravity="center"
            android:paddingStart="@dimen/_10sdp"
            android:text="5,000"
            android:textColor="@color/primary_color"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>