<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/white_5r_bg"
            android:elevation="5dp"
            android:padding="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/dateLb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/m_bold"
                android:text="Date"
                android:textColor="@color/_A8A8A8"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/dateTxt"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:background="@drawable/edit_text_bg"
                android:focusable="false"
                android:fontFamily="@font/m_semibold"
                android:gravity="center_vertical"
                android:hint="DD/MM/YYYY"
                android:importantForAutofill="no"
                android:inputType="textNoSuggestions"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:textAllCaps="true"
                android:textColor="@color/prime"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/dateLb"
                app:layout_constraintTop_toBottomOf="@+id/dateLb" />

            <TextView
                android:id="@+id/reasonLb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/m_bold"
                android:text="Reason"
                android:textColor="@color/_A8A8A8"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dateTxt" />

            <EditText
                android:id="@+id/reasonTxt"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:background="@drawable/edit_text_bg"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/m_semibold"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:textColor="@color/prime"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/reasonLb"
                app:layout_constraintTop_toBottomOf="@+id/reasonLb" />

            <TextView
                android:id="@+id/updateBtn"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/green_10r_bg"
                android:fontFamily="@font/m_bold"
                android:gravity="center"
                android:text="Update"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="@+id/reasonTxt"
                app:layout_constraintStart_toEndOf="@id/cancelBtn"
                app:layout_constraintTop_toBottomOf="@+id/reasonTxt" />

            <TextView
                android:id="@+id/cancelBtn"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/red_10r_bg"
                android:fontFamily="@font/m_bold"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintBottom_toBottomOf="@+id/updateBtn"
                app:layout_constraintEnd_toStartOf="@+id/updateBtn"
                app:layout_constraintStart_toStartOf="@+id/reasonTxt"
                app:layout_constraintTop_toTopOf="@+id/updateBtn" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>